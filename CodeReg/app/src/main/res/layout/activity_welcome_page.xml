<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/front"
    tools:context="com.example.saurav.code_reg.WelcomePage">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="313dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547">

        <Button
            android:id="@+id/brainbtn"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/nicebtn"
            android:fontFamily="@font/montserrat"
            android:lineSpacingExtra="12sp"
            android:paddingRight="0dp"
            android:text="Brain Teaser"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/dbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/nicebtn"
            android:fontFamily="@font/montserrat"
            android:paddingBottom="0dp"
            android:paddingRight="0dp"
            android:text="D-Bugging"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lanbtn"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/nicebtn"
            android:fontFamily="@font/montserrat"
            android:text="Lan-Gaming"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/userna"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="280dp"
        android:layout_marginLeft="16dp"
        android:text="hi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

</android.support.constraint.ConstraintLayout>
